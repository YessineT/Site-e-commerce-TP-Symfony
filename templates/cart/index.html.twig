{% extends 'base.html.twig' %}

{% block title %}My Cart{% endblock %}

{% block body %}
    <style>
        table {
            width: 80%;
            margin: 1em auto;
            border-collapse: collapse;
        }

        th, td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
            color: #333;
        }

        a.remove:hover {
            color: red;
        }
    </style>

    <h2 style="text-align: center;">üõí My Cart</h2>

    <table>
        <thead>
        <tr>
            <th>Product</th>
            <th>Qty</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.game.name }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ (item.game.price * item.quantity)|number_format(2, '.', ',') }} ‚Ç¨</td>
                <td>
                    <a href="{{ path('product_detail', { id: item.game.id }) }}">üîç</a>
                    <a href="{{ path('cart_remove', { id: item.id }) }}" class="remove" style="color: grey;">üóëÔ∏è</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Your cart is empty.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h3 style="text-align: center;">Total: {{ total|number_format(2, '.', ',') }} ‚Ç¨</h3>
{% endblock %}
