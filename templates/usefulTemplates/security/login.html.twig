{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Sign In - GameHub{% endblock %}

{% block body %}
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card bg-secondary">
                    <div class="card-header">
                        <h3 class="mb-0">Sign In</h3>
                    </div>
                    <div class="card-body">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <form method="post">
                            <div class="mb-3">
                                <label for="inputEmail" class="form-label">Email</label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                            </div>
                            <div class="mb-3">
                                <label for="inputPassword" class="form-label">Password</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="rememberMe" name="_remember_me">
                                <label class="form-check-label" for="rememberMe">Remember me</label>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Sign In</button>
                            </div>
                        </form>

                        <div class="mt-3 text-center">
                            <a href="{{ path('app_forgot_password_request') }}" class="text-secondary">Forgot password?</a>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        Don't have an account? <a href="{{ path('app_register') }}" class="text-primary">Sign up</a>
                    </div>
                </div>

                <div class="mt-4 text-center">
                    <p class="text-muted">Or sign in with:</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="{{ path('connect_google_start') }}" class="btn btn-outline-light">
                            <i class="fab fa-google me-2"></i> Google
                        </a>
                        <a href="{{ path('connect_facebook_start') }}" class="btn btn-outline-light">
                            <i class="fab fa-facebook-f me-2"></i> Facebook
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}