{% extends 'base.html.twig' %}

{% block title %}Your Game Library - GameHub{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/library.css') }}">
{% endblock %}

{% block body %}
<section class="py-5 bg-dark text-white">
    <div class="container">
        <h1 class="display-5 fw-bold mb-4">Your Game Library</h1>
        <p class="lead">Browse all the games you own in one place. Ready to play?</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        {% if libraryGames is empty %}
            <div class="alert alert-info text-center">
                You haven't added any games to your library yet.
            </div>
        {% else %}
            <div class="row">
                {% for game in libraryGames %}
                    <div class="col-md-4 mb-4">
                        <div class="card game-card h-100">
                            <img src="{{ asset('uploads/games/' ~ game.thumbnail) }}" class="card-img-top" alt="{{ game.title }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ game.title }}</h5>
                                <p class="card-text text-secondary">{{ game.genre.name }}</p>
                                <p class="card-text">{{ game.shortDescription|length > 100 ? game.shortDescription|slice(0, 100) ~ '...' : game.shortDescription }}</p>
                                <a href="{{ path('app_game_play', { id: game.id }) }}" class="btn btn-sm btn-success">Play Now</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</section>
{% endblock %}
