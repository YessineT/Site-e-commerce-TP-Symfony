{# templates/user/_form.html.twig #}
{{ form_start(form) }}

<div class="card shadow-lg mb-4">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0"><i class="fas fa-user-circle me-2"></i>Basic Information</h5>
    </div>
    <div class="card-body bg-darker">
        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_row(form.email, {
                    'attr': {'class': 'form-control bg-dark text-white'},
                    'label_attr': {'class': 'text-white-50'}
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.username, {
                    'attr': {'class': 'form-control bg-dark text-white'},
                    'label_attr': {'class': 'text-white-50'}
                }) }}
            </div>
        </div>
        
        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_row(form.firstName, {
                    'attr': {'class': 'form-control bg-dark text-white'},
                    'label_attr': {'class': 'text-white-50'}
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.lastName, {
                    'attr': {'class': 'form-control bg-dark text-white'},
                    'label_attr': {'class': 'text-white-50'}
                }) }}
            </div>
        </div>
        
        {% if form.plainPassword is defined %}
        <div class="mb-3">
            {{ form_row(form.plainPassword, {
                'attr': {'class': 'form-control bg-dark text-white'},
                'label_attr': {'class': 'text-white-50'},
                'help': 'Minimum 8 characters'
            }) }}
        </div>
        {% endif %}
    </div>
</div>

<div class="card shadow-lg mb-4">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0"><i class="fas fa-id-card me-2"></i>Profile Details</h5>
    </div>
    <div class="card-body bg-darker">
        <div class="mb-3">
            {{ form_row(form.avatarFile, {
                'attr': {'class': 'form-control bg-dark text-white'},
                'label_attr': {'class': 'text-white-50'},
                'help': 'Recommended size: 300x300px (square image)'
            }) }}
        </div>
        
        <div class="mb-3">
            {{ form_row(form.bio, {
                'attr': {'class': 'form-control bg-dark text-white', 'rows': 3},
                'label_attr': {'class': 'text-white-50'}
            }) }}
        </div>
        
        <div class="mb-3">
            {{ form_row(form.phone, {
                'attr': {'class': 'form-control bg-dark text-white'},
                'label_attr': {'class': 'text-white-50'}
            }) }}
        </div>
    </div>
</div>

<div class="card shadow-lg mb-4">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Account Settings</h5>
    </div>
    <div class="card-body bg-darker">
        <div class="mb-3">
            {{ form_row(form.roles, {
                'attr': {'class': 'form-select bg-dark text-white'},
                'label_attr': {'class': 'text-white-50'}
            }) }}
        </div>
        
        <div class="form-check form-switch mb-3">
            {{ form_row(form.isVerified, {
                'attr': {'class': 'form-check-input bg-dark'},
                'label_attr': {'class': 'form-check-label text-white-50'}
            }) }}
        </div>
    </div>
</div>

<div class="d-flex justify-content-end gap-3 mt-4">
    <button type="submit" class="btn btn-primary px-4 py-2">
        <i class="fas fa-save me-2"></i> {{ button_label|default('Create User') }}
    </button>
</div>

{{ form_end(form) }}