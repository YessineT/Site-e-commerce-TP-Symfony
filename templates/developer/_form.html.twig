<div class="row justify-content-center">
    <div class="col-lg-8">
        {{ form_start(form) }}

        <div class="mb-4">
            {{ form_row(form.name, {'attr': {'class': 'form-control bg-dark text-white'}}) }}
        </div>

        <div class="mb-4">
            {{ form_row(form.slug, {'attr': {'class': 'form-control bg-dark text-white'}}) }}
        </div>

        <div class="mb-4">
            {{ form_row(form.description, {'attr': {'class': 'form-control bg-dark text-white'}}) }}
        </div>

        <div class="mb-4">
            {{ form_row(form.logo, {'attr': {'class': 'form-control bg-dark text-white'}}) }}
        </div>

        <div class="mb-4">
            {{ form_row(form.website, {'attr': {'class': 'form-control bg-dark text-white'}}) }}
        </div>

        <div class="d-flex justify-content-center mt-4">
            <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
