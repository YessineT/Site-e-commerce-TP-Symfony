{# templates/news/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}GameHub - Latest News{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/news.css') }}">
{% endblock %}

{% block body %}
    <section class="py-5 bg-dark text-white">
        <div class="container">
            <h1 class="display-5 fw-bold mb-4">Latest News</h1>
            <p class="lead">Stay up-to-date with the latest happenings in the gaming world</p>
        </div>
    </section>
    <section class="py-5">
        <div class="container px-4">
            <div class="row g-4" id="news-container">
                {% for newsItem in news %}
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0">
                            <img src="{{ asset('uploads/news/' ~ newsItem.image) }}" class="card-img-top" alt="{{ newsItem.title }}">
                            <div class="card-body d-flex flex-column">
                                <h3 class="card-title">{{ newsItem.title }}</h3>
                                <p class="card-text flex-grow-1">{{ newsItem.summary|length > 120 ? newsItem.summary|slice(0, 120) ~ '...' : newsItem.summary }}</p>
                                <a href="{{ path('app_news_show', { id: newsItem.id, slug: newsItem.slug }) }}" class="btn btn-sm btn-primary">Read More</a>
                            </div>
                            <div class="card-footer bg-transparent border-0">
                                <small class="text-muted">Posted {{ newsItem.createdAt|ago }} in {{ newsItem.genre.name }}</small>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p class="text-center text-muted">No news available at the moment.</p>
                {% endfor %}
            </div>

            <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(news) }}
            </div>
        </div>
    </section>

    <style>
        /* Optional: you can also move this CSS to news.css */
        .card-img-top {
            height: 180px;
            object-fit: cover;
        }
        .card-title {
            font-size: 1.25rem;
            font-weight: 700;
        }
        .card-text {
            font-size: 0.95rem;
            color: #555;
        }
    </style>
{% endblock %}
