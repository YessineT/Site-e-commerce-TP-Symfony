<div class="row justify-content-center">
    <div class="col-lg-8">
        {{ form_start(form) }}

        <div class="mb-4">
            {{ form_row(form.name) }}
        </div>

        <div class="mb-4">
            {{ form_row(form.slug) }}
        </div>

        <div class="mb-4">
            {{ form_row(form.icon) }}
        </div>

        <div class="d-flex justify-content-center mt-4">
            <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
