{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}GameHub - Your Ultimate Game Store{% endblock %}</title>
    <link rel="icon" type="image/png" href="{{ asset('images/logo.png') }}">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        :root {
            --primary-color: #2a2a2a;
            --secondary-color: #040e19;
            --accent-color: #0074e4;
            --text-color: #ffffff;
            --text-secondary: #cccccc;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--primary-color);
            color: var(--text-color);
   background: linear-gradient(90deg,rgba(18, 48, 99, 1) 0%, rgba(6, 24, 36, 1) 34%, rgba(18, 48, 99, 1) 63%, rgba(6, 24, 36, 1) 100%) !important;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .darker-bg {
  position: relative;
  background: inherit;
  color: inherit;
}

.darker-bg::before {
  content: "";
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.33);
  pointer-events: none;
  z-index: 0;
}

.darker-bg > * {
  position: relative;
  z-index: 1;
}


        .footer {
            padding-top: 2rem;
            padding-bottom: 2rem;
        }

        .navbar {
            background-color: var(--secondary-color) !important;
            padding: 0.8rem 1rem;
        }

        .navbar-brand img {
            height: 40px;
        }

        .nav-link {
            color: var(--text-color) !important;
            font-weight: 500;
            padding: 0.5rem 1rem !important;
        }

        .nav-link:hover{
            color: var(--accent-color) !important;
        }

        .hero-section {
            position: relative;
             background: inherit;
            color: inherit;
            background-size: cover;
            height: 70vh;
            display: flex;
            align-items: center;
            position: relative;
        }
        .hero-section::before {
        content: "";
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.33);
        pointer-events: none;
        z-index: 0;
        }

        .hero-section > * {
        position: relative;
        z-index: 1;
}

        /* ... (keep all your existing CSS styles) ... */
    </style>
    {% block stylesheets %}{% endblock %}
</head>
<body>
<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <img src="{{ asset('images/logo.png') }}" alt="GameHub Logo">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            {% if app.user %}
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') == 'app_home' ? 'active' }}" href="{{ path('app_home') }}">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') starts with 'app_store' ? 'active' }}" href="{{ path('app_store') }}">Store</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') starts with 'app_news' ? 'active' }}" href="{{ path('app_news') }}">News</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') starts with 'app_library' ? 'active' }}" href="{{ path('app_library') }}">Library</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') starts with 'app_cart' ? 'active' }}" href="{{ path('app_cart') }}">My Cart</a>
                </li>

            </ul>
            {% endif %}
            <div class="ms-auto">
                <a href="{{ path('app_search') }}" class="btn btn-outline-light border-0 me-2"><i class="fas fa-search"></i></a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_admin') }}" class="btn btn-secondary me-2">Dashboard</a>
                {% endif %}
                {% if app.user %}
                  <a href="{{ path('app_logout') }}" class="btn btn-primary me-2">Logout</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-primary me-2">Sign In</a>
                {% endif %}
            </div>
        </div>
    </div>
</nav>

{% block body %}{% endblock %}

<!-- Footer -->
<footer class="footer darker-bg" style="background-color: #040e19; color: white;">
    <div class="container ">
        <div class="row justify-content-center ">
            <div class="col-md-3">
                <h4 class="mb-3">GameHub</h4>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="{{ path('app_about') }}" class="nav-link p-0 text-light">About Us</a></li>
                    <li class="nav-item mb-2"><a href="{{ path('app_careers') }}" class="nav-link p-0 text-light">Careers</a></li>
                    <li class="nav-item mb"><a href="{{ path('app_blog') }}" class="nav-link p-0 text-light">Blog</a></li>
                </ul>
            </div>
            <!-- ... (other footer columns) ... -->
        </div>
        <div class="border-top pt-4 mt-4 text-center">
            <p class="text-light">Â© {{ "now"|date("Y") }} GameHub, Inc. All rights reserved.</p>
        </div>
    </div>
</footer>


<!-- Bootstrap JS Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
