{% extends 'base.html.twig' %}

{% block title %}{{ news.title }}{% endblock %}

{% block body %}
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="card shadow-sm bg-secondary text-light">
                    <img src="{{ asset('uploads/news/' ~ news.image) }}" class="card-img-top" alt="{{ news.title }}">
                    <div class="card-body p-4">
                        <h1 class="card-title mb-3">{{ news.title }}</h1>
                        <p class="text-muted mb-2">
                            Posted on {{ news.createdAt|date('F j, Y') }} |
                            Genre: <span class="fw-semibold">{{ news.genre.name }}</span>
                        </p>
                        <hr class="border-light">
                        <div class="card-text fs-5 lh-lg">
                            {{ news.content|raw }}
                        </div>
                        <a href="{{ path('app_news') }}" class="btn btn-outline-light mt-4">
                            <i class="fas fa-arrow-left me-2"></i> Back to News
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
