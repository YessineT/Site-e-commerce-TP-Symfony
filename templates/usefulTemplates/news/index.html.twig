{# templates/news/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}GameHub - Latest News{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="container">
            <h2 class="section-title">Latest News</h2>

            <div class="row">
                {% for newsItem in news %}
                    <div class="col-md-6 mb-4">
                        <div class="card bg-secondary border-0 h-100">
                            <img src="{{ asset('uploads/news/' ~ newsItem.image) }}" class="card-img-top" alt="{{ newsItem.title }}">
                            <div class="card-body">
                                <h3 class="card-title">{{ newsItem.title }}</h3>
                                <p class="card-text">{{ newsItem.summary }}</p>
                                <a href="{{ path('app_news_show', {id: newsItem.id, slug: newsItem.slug}) }}" class="btn btn-sm btn-primary">Read More</a>
                            </div>
                            <div class="card-footer bg-transparent border-0">
                                <small class="text-muted">Posted {{ newsItem.createdAt|ago }} in {{ newsItem.category.name }}</small>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(news) }}
            </div>
        </div>
    </section>
{% endblock %}