{% extends 'base.html.twig' %}

{% block title %}Submit New Game{% endblock %}

{% block body %}
    <div class="container py-5">
        <h1 class="mb-4">Submit New Game</h1>

        <div class="card shadow">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-8">
                        {{ form_row(form.title) }}
                        {{ form_row(form.description) }}

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.price) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.releaseDate) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="mb-4">
                            <small class="text-muted">Recommended size: 600x400px</small>
                        </div>

                        {{ form_row(form.genre) }}
                        {{ form_row(form.platforms) }}
                    </div>
                </div>

                <hr>

                <h4 class="mb-3">System Requirements</h4>
                <div class="row">
                    <div class="col-md-6">
                        <h5>Minimum</h5>
                        {{ form_row(form.minOs) }}
                        {{ form_row(form.minProcessor) }}
                        {{ form_row(form.minMemory) }}
                    </div>
                    <div class="col-md-6">
                        <h5>Recommended</h5>
                        {{ form_row(form.recOs) }}
                        {{ form_row(form.recProcessor) }}
                        {{ form_row(form.recMemory) }}
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-paper-plane me-2"></i> Submit for Review
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}